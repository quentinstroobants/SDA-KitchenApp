<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycler_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="vertical"
        app:layoutManager="LinearLayoutManager" />

    <Button
        android:id="@+id/shopping_list_add_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/add_shoppinglist"
        android:layout_marginTop="600dp"
        android:layout_marginStart="270dp"/>

    <Button
        android:id="@+id/shopping_list_remove_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/remove_shoppinglist"
        android:layout_marginTop="600dp"
        android:layout_marginStart="50dp"/>

    <Button
        android:id="@+id/shopping_list_clear_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/clear_shoppinglist"
        android:layout_marginTop="600dp"
        android:layout_marginStart="160dp"/>
</FrameLayout>

