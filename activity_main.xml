<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#FFF57274">

    <ImageView
        android:id="@+id/MainPicture"
        android:layout_width="400dp"
        android:layout_height="250dp"
        android:layout_marginStart="5dp"
        android:layout_marginTop="-7dp"
        android:src="@drawable/kitchenpicture" />

    <ImageView
            android:id="@+id/settings"
            android:layout_width="58dp"
            android:layout_height="49dp"
            android:src="@drawable/settings"
            android:layout_marginStart="18dp"
            android:layout_marginTop="16dp"
            />

    <ImageButton
        android:id="@+id/MainScreenButton1"
        android:layout_width="400dp"
        android:layout_height="120dp"
        android:layout_marginStart="5dp"
        android:layout_marginTop="215dp"
        android:src="@drawable/mainscreenbutton"
        />

    <ImageButton
        android:id="@+id/mainscreenbutton2"
        android:layout_width="400dp"
        android:layout_height="125dp"
        android:layout_marginStart="5dp"
        android:layout_marginTop="340dp"
        android:src="@drawable/mainscreenbutton" />

    <ImageButton
        android:id="@+id/mainscreenbutton3"
        android:layout_width="400dp"
        android:layout_height="125dp"
        android:layout_marginStart="5dp"
        android:layout_marginTop="470dp"
        android:src="@drawable/mainscreenbutton" />

    <ImageButton
        android:id="@+id/mainscreenbutton4"
        android:layout_width="400dp"
        android:layout_height="125dp"
        android:layout_marginStart="5dp"
        android:layout_marginTop="600dp"
        android:src="@drawable/mainscreenbutton"
        android:text=""/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="90dp"
        android:layout_marginTop="250dp"
        android:text="Fridge Content"
        android:textColor="#FF47525E"
        android:textSize="37.5sp"
        android:fontFamily="@font/BerkshireSwashRegular"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="140dp"
        android:layout_marginTop="380dp"
        android:text="Recipes"
        android:textColor="#FF47525E"
        android:textSize="37.5sp"
        android:fontFamily="@font/BerkshireSwashRegular"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="110dp"
        android:layout_marginTop="510dp"
        android:text="Shopping list"
        android:textColor="#FF47525E"
        android:textSize="37.5sp"
        android:fontFamily="@font/BerkshireSwashRegular"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="105dp"
        android:layout_marginTop="640dp"
        android:text="Meal planner"
        android:textColor="#FF47525E"
        android:textSize="37.5sp"
        android:fontFamily="@font/BerkshireSwashRegular"/>

    <TextView
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="90dp"
        android:layout_marginTop="20dp"
        android:text="@string/app_name"
        android:textColor="#FF28283A"
        android:textSize="70sp"
        android:fontFamily="@font/BerkshireSwashRegular"/>


</RelativeLayout>